<section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: linear-gradient(rgba(10, 61, 61, 0.7), rgba(10, 61, 61, 0.7)), url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1920&q=80');">
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container-custom text-center text-white px-4">
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
      Imagine <span class="font-extrabold">Windows.</span> Not Walls.
    </h1>
    <p class="text-lg md:text-xl lg:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
      Luxury aluminium windows and doors designed to bring in light, views and lasting strength.
    </p>
    <button class="btn-primary text-lg px-8 py-4">
      Book a Window Consultation
    </button>
    
    <!-- Carousel Dots -->
    <div class="flex justify-center gap-2 mt-12">
      <button class="w-3 h-3 rounded-full bg-white" aria-label="Slide 1"></button>
      <button class="w-3 h-3 rounded-full bg-white/50" aria-label="Slide 2"></button>
      <button class="w-3 h-3 rounded-full bg-white/50" aria-label="Slide 3"></button>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>
